generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  GRC
  VIEWER
}

enum RiskTreatment {
  AVOID
  MITIGATE
  TRANSFER
  ACCEPT
}

enum RiskStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum ControlStatus {
  NOT_STARTED
  IN_PROGRESS
  IMPLEMENTED
  NOT_APPLICABLE
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum EvidenceType {
  POLICY
  SCREENSHOT
  TICKET
  LOG
  CONTRACT
  OTHER
}

model User {
  id             String       @id @default(cuid())
  name           String?
  email          String       @unique
  passwordHash   String?
  image          String?
  emailVerified  DateTime?
  accounts       Account[]
  sessions       Session[]
  memberships    Membership[]
  assignedRisks  Risk[]       @relation("RiskOwner")
  assignedTasks  Task[]       @relation("TaskAssignee")
  comments       TaskComment[]
  auditLogs      AuditLog[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Organization {
  id           String        @id @default(cuid())
  name         String
  edrpou       String?
  industry     String
  size         String
  memberships  Membership[]
  risks        Risk[]
  controls     Control[]
  tasks        Task[]
  evidence     EvidenceItem[]
  auditLogs    AuditLog[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Membership {
  id             String       @id @default(cuid())
  userId         String
  organizationId String
  role           Role
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

model Risk {
  id             String         @id @default(cuid())
  organizationId String
  assetProcess   String
  threat         String
  vulnerability  String
  impact         Int
  likelihood     Int
  riskScore      Int
  ownerId        String?
  treatment      RiskTreatment
  dueDate        DateTime?
  status         RiskStatus
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  owner          User?          @relation("RiskOwner", fields: [ownerId], references: [id], onDelete: SetNull)
  tasks          Task[]
  evidence       EvidenceItem[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Control {
  id             String         @id @default(cuid())
  organizationId String
  code           String
  title          String
  description    String
  status         ControlStatus  @default(NOT_STARTED)
  tasks          Task[]
  evidence       EvidenceItem[]
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@unique([organizationId, code])
}

model Task {
  id             String         @id @default(cuid())
  organizationId String
  title          String
  description    String?
  status         TaskStatus     @default(TODO)
  dueDate        DateTime?
  assigneeId     String?
  riskId         String?
  controlId      String?
  assignee       User?          @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  risk           Risk?          @relation(fields: [riskId], references: [id], onDelete: SetNull)
  control        Control?       @relation(fields: [controlId], references: [id], onDelete: SetNull)
  comments       TaskComment[]
  evidence       EvidenceItem[]
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model TaskComment {
  id        String   @id @default(cuid())
  taskId     String
  authorId   String
  body       String
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model EvidenceItem {
  id             String       @id @default(cuid())
  organizationId String
  type           EvidenceType
  title          String
  description    String?
  fileName       String?
  fileUrl        String?
  metadataJson   String?
  controlId      String?
  riskId         String?
  taskId         String?
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  control        Control?     @relation(fields: [controlId], references: [id], onDelete: SetNull)
  risk           Risk?        @relation(fields: [riskId], references: [id], onDelete: SetNull)
  task           Task?        @relation(fields: [taskId], references: [id], onDelete: SetNull)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model AuditLog {
  id             String       @id @default(cuid())
  organizationId String
  actorId        String
  entity         String
  entityId       String
  action         String
  diffJson       String?
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  actor          User         @relation(fields: [actorId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
